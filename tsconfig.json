{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "moduleResolution": "node16",
    "rootDir": "./src",
    "types": ["node"],      
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["./src"],
  
}
